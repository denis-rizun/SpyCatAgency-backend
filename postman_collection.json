{
	"info": {
		"name": "Spy Cat Agency API",
		"description": "API collection for managing spy cats and missions",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/health",
							"host": ["{{base_url}}"],
							"path": ["health"]
						}
					}
				}
			]
		},
		{
			"name": "Cats",
			"item": [
				{
					"name": "Create Cat",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Whiskers\",\n    \"years_of_experience\": 5,\n    \"breed\": \"Persian\",\n    \"salary\": 1000.0\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/cats",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "cats"]
						}
					}
				},
				{
					"name": "Get All Cats",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/api/v1/cats",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "cats"]
						}
					}
				},
				{
					"name": "Get Cat by ID",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/api/v1/cats/1",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "cats", "1"]
						}
					}
				},
				{
					"name": "Update Cat Salary",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"salary\": 1500.0\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/cats/1",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "cats", "1"]
						}
					}
				},
				{
					"name": "Delete Cat",
					"request": {
						"method": "DELETE",
						"url": {
							"raw": "{{base_url}}/api/v1/cats/1",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "cats", "1"]
						}
					}
				}
			]
		},
		{
			"name": "Missions",
			"item": [
				{
					"name": "Create Mission",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"targets\": [\n        {\n            \"name\": \"Target 1\",\n            \"country\": \"Russia\",\n            \"notes\": null\n        },\n        {\n            \"name\": \"Target 2\",\n            \"country\": \"USA\",\n            \"notes\": null\n        }\n    ]\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/missions",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "missions"]
						}
					}
				},
				{
					"name": "Get All Missions",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/api/v1/missions",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "missions"]
						}
					}
				},
				{
					"name": "Get Mission by ID",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/api/v1/missions/1",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "missions", "1"]
						}
					}
				},
				{
					"name": "Assign Cat to Mission",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"cat_id\": 1\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/missions/1/assign",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "missions", "1", "assign"]
						}
					}
				},
				{
					"name": "Update Mission Targets",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"targets\": [\n        {\n            \"id\": 1,\n            \"notes\": \"Collected important data\",\n            \"is_completed\": true\n        }\n    ]\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/missions/1/targets",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "missions", "1", "targets"]
						}
					}
				},
				{
					"name": "Delete Mission",
					"request": {
						"method": "DELETE",
						"url": {
							"raw": "{{base_url}}/api/v1/missions/1",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "missions", "1"]
						}
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		}
	]
}
